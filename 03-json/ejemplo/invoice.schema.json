{
  "$id": "https://example.com/invoice.schema.json",
  "title": "Invoice",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "date", "customer", "items", "currency", "total"],
  "properties": {
    "id": { "type": "string", "pattern": "^INV-\\d{6}$" },
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "currency": {
      "type": "string",
      "enum": ["USD", "EUR", "COP", "BRL", "MXN"]
    },
    "customer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "taxId"],
      "properties": {
        "id": { "type": "string", "minLength": 2 },
        "name": { "type": "string", "minLength": 1 },
        "email": { "type": "string" },
        "taxId": { "type": "string", "pattern": "^[A-Z0-9-]{5,20}$" }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["productId", "description", "quantity", "unitPrice"],
        "properties": {
          "productId": { "type": "string", "pattern": "^P\\d{3}$" },
          "description": { "type": "string", "minLength": 1 },
          "quantity": { "type": "integer", "minimum": 1 },
          "unitPrice": { "type": "number", "minimum": 0 }
        }
      }
    },
    "total": { "type": "number", "minimum": 0 }
  }
}
